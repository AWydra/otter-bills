{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNEXT",
    "lib": [],
    "module": "NodeNext",
    "rootDir": "./",
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "package.json"],
  "ts-node": {
    "esm": true
  }
}
