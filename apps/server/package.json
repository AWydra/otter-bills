  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "dependencies": {
    "@repo/types": "*",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "postgres": "^3.4.4",
    "uuid": "^10.0.0",
    "validator": "^13.12.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/jest-presets": "*",
    "@repo/typescript-config": "*",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.11.10",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  }
}
